{
  "name": "@pm/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "db:generate": "pnpm build && drizzle-kit generate",
    "db:migrate": "pnpm build && drizzle-kit migrate",
    "db:push": "pnpm build && drizzle-kit push",
    "db:seed": "tsx scripts/seed.ts",
    "seed": "tsx scripts/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.7.6",
    "@neondatabase/serverless": "^1.0.2",
    "@pm/shared": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.7.0",
    "hono-rate-limiter": "^0.5.3",
    "pg": "^8.18.0",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "postgres": "^3.4.8",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}
